const przycisk = document.querySelector("#uniq");
console.log(przycisk);
function zderzak() {alert("Możesz być z siebie dumny");
}
przycisk.addEventListener('click',()=>{
    zderzak();
})

const superr = document.querySelector("#super");
console.log(superr);
function essa() {confirm("Czy jesteś pewien że chcesz kontynuować?");
}
superr.addEventListener('click',()=>{
    essa();
})
let krowaa = confirm("Czy jesteś pewien że chcesz kontynuować?");

function krowa() {
    let byk=confirm('Czy jesteś pewien że chcesz kontynuować?');
    if(byk)
{
    alert('No to kontynuuj...');
}
else
{
    alert('Przykro mi że nie chcesz kontynuować...');
}
}



